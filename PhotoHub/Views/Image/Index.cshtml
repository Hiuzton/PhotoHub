@model IEnumerable<PhotoHub.Models.ImageModel>

<h1>All Images</h1>

<div class="container">
    <div class="row gx-1 gy-1">
        @foreach (var image in Model)
        {
            <div class="col-md-4 mb-4">
                <a asp-action="Details" asp-controller="BlogPost" asp-route-id="@image.IdBlogPost" style="text-decoration: none; color: inherit;">
                    <div class="card">
                        <img src="@image.Url" class="card-img-top" alt="Image @image.IdImage" />
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>

    .card-img-top {
        height: 200px; 
        object-fit: contain;
    }
</style>


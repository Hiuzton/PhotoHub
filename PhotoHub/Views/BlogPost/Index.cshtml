@model X.PagedList.IPagedList<PhotoHub.ViewModels.BlogPostViewModel>
@using X.PagedList
@using X.PagedList.Mvc.Core

<h1 class="text-center">Latest Posts</h1>

<p class="text-end">
    <a class="btn btn-primary" asp-action="CreateBlogPost">Create New</a>
</p>
<div class="container">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-12 mb-4 d-flex justify-content-center">
                <a asp-action="Details" asp-controller="BlogPost" asp-route-id="@item.IdBlogPost" style="text-decoration: none; color: inherit;">
                    <div class="card" style="width: 100%; max-width: 600px;">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Content.Substring(0, Math.Min(item.Content.Length, 150))...</p>
                            <p class="text-muted">
                                <small>By: @item.AuthorName on @item.CreatedDate.ToString("MMMM dd, yyyy")</small>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<!-- Pagination -->
<div class="pagination-container text-center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>


<style>
    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .card-img-top {
        object-fit: fill;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-title {
        font-weight: bold;
    }

    .card-text {
        height: 20px;
        overflow: hidden;
    }

    .pagination-container {
        margin-top: 30px;
    }

    .pagination {
        display: inline-block;
        padding: 10px 0;
        list-style: none;
        border-radius: 5px;
    }

    .pagination li {
        display: inline;
    }

    .pagination li a {
        color: #007bff;
        padding: 8px 16px;
        text-decoration: none;
        margin: 0 5px;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .pagination li a:hover {
        background-color: #007bff;
        color: white;
    }

    .pagination li.active a {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }

    .pagination li.disabled a {
        color: #ccc;
        cursor: not-allowed;
    }
</style>
